<!DOCTYPE html>
<html>
    <head>
        
        <link rel="stylesheet" href="/assets/css/paperStyle.css">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.7.1/styles/railscasts.min.css">
        <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.7.1/highlight.min.js"></script>        
        
        <link rel="preconnect" href="https://fonts.googleapis.com"> 
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
        <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono&display=swap" rel="stylesheet">

        <%- include ("partials/header") %>

    </head>
    
    <body>

        <%- include ("partials/animation") %>                
        <%- include ("partials/navBar") %>
        <div class="scrollIndicator">
            <div class="scrollIndicatorFill"></div>
        </div>
        
        
        <article id="content">
            <p class="date"><%= paper.date %></p>
            <!-- Authors -->
            <p class="author"><%= paper.authors.join(', ')  %></p>
            <h1><%= paper.heading %></h1>

            <div class="paperPopUp" onmouseleave="closePaperPopUp(true)">
                <div class="popupCloser" onmouseover="closePaperPopUp(true)"></div>
                <div class="popUp">
                    <div class="popTitle">
                        <p class="paperPopUpTitle">Title</p>
                    </div>
                    <div class="popUpContent">
                        
                    </div>
                    
                </div>
            </div>
            <div onclick="closePaperPopUp()">
                <div class="headingsAndPaperDiv">
                    <div class="headings">
                        <%- paper.headings %>
                    </div>

                    <div class="paper">
                        <%- paper.paper %>
                    </div>
                </div>
                
                
            </div>
        </article>
       
        <%- include ("partials/footer") %>
        
        <script src="/assets/config.js"></script>
        <script src="/assets/fade.js"></script>
        <script src="/assets/js/paperPopUp.js"></script>
        <script src="/assets/js/scrollIndicator.js"></script>
        <script>hljs.highlightAll();</script>
    </body>
    
    
</html> 